	var now = fnAdjustDate(new Date());
	var currentDay = now.getDate();
	
	var select = document.createElement("select");
	select.setAttribute("name", "seldate");
	select.setAttribute("id", "seldate");
	if ( isFireFox ) {
		select.setAttribute("onchange", "fnUpdate(true)");
